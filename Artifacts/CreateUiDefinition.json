{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "KaveAdminUserName",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "KAVE admin",
        "defaultValue": "",
        "toolTip": "Enter a KAVE admin user name. Must be lower case, 6-32 letters long and can't contain any numbers.",
        "constraints": {
          "required": true,
          "regex": "^[a-z]{6,32}$"
        },
        "osPlatform": "Linux",
        "visible": true
      },
      {
        "name": "KAVEAdminPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "password": "Password",
          "confirmPassword": "Confirm password"
        },
        "toolTip": {
          "password": "Admin password for KAVE."
        },
        "osPlatform": "Windows",
        "constraints": {
          "required": true
        }
      },
{
  "name": "UseSinglePasswordForVMandKAVE",
  "type": "Microsoft.Common.OptionsGroup",
  "label": "Use a single password to access KAVE and all VMs. Choose 'No' if you'd like to use SSH.",
  "defaultValue": "Yes",
  "toolTip": "If you'd like to use SSH or another password to access your VMs, choose 'No'",
  "constraints": {
    "allowedValues": [
      {
        "label": "Yes",
        "value": "SinglePassword"
      },
      {
        "label": "No",
        "value": "SecondPasswordOrSSH"
      }
    ]
  },
  "visible": true
},
      {
        "name": "VMAdminPassword",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "toolTip": {
          "authenticationType": "Choose either SSH or a password to connect to the VMs.",
          "password": "Must be 6-32 letters long and can't contain any numbers.",
          "sshPublicKey": "SSH Key for the VMs."
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false,
          "hidePassword": false
        },
        "osPlatform": "Linux",
        "visible": "[contains(basics('UseSinglePasswordForVMandKAVE'), 'SecondPasswordOrSSH')]"
      }
    ],
    "steps": [
      {
        "name": "storageConfig",
        "label": "Storage",
        "subLabel": {
          "preValidation": "Configure the storage settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Storage",
        "elements": [
          {
            "name": "saName",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "",
            "defaultValue": {
              "name": "",
              "type": "Standard_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Standard_LRS"
              ]
            },
            "options": {
              "hideExisting": false
            },
            "visible": true
          },
          {
            "name": "saPremiumName",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Premium Storage account",
            "toolTip": "",
            "defaultValue": {
              "name": "",
              "type": "Premium_LRS"
            },
            "constraints": {
              "allowedTypes": [
                "Premium_LRS"
              ]
            },
            "options": {
              "hideExisting": false
            },
            "visible": true
          }
        ]
      },
      {
        "name": "dnsConfig",
        "label": "DNS prefix",
        "subLabel": {
          "preValidation": "Configure the DNS prefix.",
          "postValidation": "Done"
        },
        "bladeTitle": "DNS prefix",
        "elements": [
          {
            "name": "dnsLabelPrefix",
            "type": "Microsoft.Network.PublicIpAddressCombo",
            "label": {
              "publicIpAddress": "Public IP address",
              "domainNameLabel": "Domain name label"
            },
            "toolTip": {
              "publicIpAddress": "Choose a public IP address.",
              "domainNameLabel": "Choose a domain name label."
            },
            "defaultValue": {
              "publicIpAddressName": "",
              "domainNameLabel": ""
            },
            "constraints": {
              "required": {
                "domainNameLabel": true
              }
            },
            "options": {
              "hideNone": false,
              "hideDomainNameLabel": false,
              "hideExisting": false
            },
            "visible": true
          }
        ]
      }
    ],
    "outputs": {
      "KAVEAdminUserName": "[basics('KAVEAdminUserName')]",
      "KAVEAdminPassword": "[basics('KAVEAdminPassword').password]",
      "VMAdminPassword": "[basics('VMAdminPassword').password]",
      "VMAdminSSHKey": "[basics('VMAdminPassword').sshPublicKey]",
      "saName": "[steps('storageConfig').saName]",
      "saPremiumName": "[steps('storageConfig').saPremiumName]",
      "dnsLabelPrefix": "[steps('dnsConfig').dnsLabelPrefix]"
    }
  }
}
